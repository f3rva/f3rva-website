{
  "name": "f3rva-website",
  "version": "1.0.0",
  "type": "module",
  "description": "F3 RVA website - Fitness, Fellowship, Faith in Richmond, Virginia",
  "homepage": ".",
  "keywords": [
    "f3",
    "fitness",
    "fellowship",
    "faith",
    "richmond",
    "virginia",
    "community",
    "men"
  ],
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "dompurify": "^3.3.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.8.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "dev": "node scripts/setup-robots.js dev && vite",
    "start": "node scripts/setup-robots.js dev && vite",
    "build": "tsc && vite build",
    "build:dev": "node scripts/setup-robots.js dev && npm run build",
    "build:prod": "node scripts/setup-robots.js prod && npm run build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "setup-robots:dev": "node scripts/setup-robots.js dev",
    "setup-robots:prod": "node scripts/setup-robots.js prod",
    "seo-check": "echo 'SEO files generated successfully. Check public/sitemap.xml and public/robots.txt'"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^5.0.2",
    "eslint": "^9.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  }
}
